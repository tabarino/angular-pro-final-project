{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            ".firebaserc",
            ".vscode",
            ".git",
            ".gitignore",
            ".editorconfig",
            "src/**/.*",
            "package.json",
            "README.md",
            "tsconfig.json"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
